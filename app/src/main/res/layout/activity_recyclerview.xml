<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/click"
    android:background="#fff">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgrecyclernews"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txtrecyclernew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgrecyclernews"
                android:layout_toRightOf="@+id/imgrecyclernews"
                android:textColor="#c21ed7"
                android:textSize="18sp"
                tools:text="test on new news..." />

            <TextView
                android:id="@+id/txtrecyclerdocsnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtrecyclernew"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/imgrecyclernews"
                android:maxLines="1"
                android:textColor="#0e1394"
                tools:text="this is a long " />


        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>